.panel.panel-default
  .panel-heading
    .panel-title
      %h2 Sign up
  .panel-body
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = devise_error_messages!
      .form-group
        = f.label :first_name
        = f.text_field :first_name, autofocus: true, class: 'form-control', placeholder: "Enter first name"
      .form-group
        = f.label :last_name
        = f.text_field :last_name, autofocus: true, class: 'form-control', placeholder: "Enter last name"
      .form-group
        = f.label :email
        = f.email_field :email, autofocus: true, placeholder: "Enter email", class: "form-control"
      .form-group
        = f.label :password
        - if @validatable
          %em
            (#{@minimum_password_length} characters minimum)
        = f.password_field :password, autocomplete: "off", placeholder: "Enter password", class: "form-control"
      .form-group
        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: "off", placeholder: "Enter password confirmation", class: "form-control"
      .actions
        = f.submit "Sign up", class: "btn btn-success"
  .panel-footer
    = render "devise/shared/links"
